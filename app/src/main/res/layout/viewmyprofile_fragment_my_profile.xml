<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBGSecondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.benedictlutab.sidelinetskr.modules.viewMyProfile.myProfileFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeRefLayout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--MAIN PROFILE CONTENT-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivCoverPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="#eeeeee" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civTaskerPhoto"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/ivCoverPhoto"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-90dp"
                        android:elevation="5dp"
                        android:padding="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/main_img_person"
                        app:civ_border_color="#ef5350"
                        app:civ_border_width="1dp"/>

                    <RelativeLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivCoverPhoto"
                        android:background="#37474F"
                        android:elevation="4dp"
                        android:paddingBottom="24dp">


                        <TextView
                            android:id="@+id/tvFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="60dp"
                            android:text="Lorem Ipsum"
                            android:textColor="#fff"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvMemberSince"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvFullName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="Member since January 10, 1989"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvAverageRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMemberSince"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="4.5 Average Rating "
                            android:textColor="#fff"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_layout"
                        android:layout_marginTop="25dp"
                        android:paddingBottom="100dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="#546E7A"
                            android:clickable="true"
                            android:elevation="10dp"
                            android:padding="15dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorFontPrimary"
                            android:textAllCaps="true"
                            android:text="About Me" />

                        <TextView
                            android:id="@+id/tvShortBio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Short Bio Here"
                            android:autoLink="web|email"
                            android:linksClickable="true"
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="#546E7A"
                            android:clickable="true"
                            android:elevation="10dp"
                            android:padding="15dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorFontPrimary"
                            android:textAllCaps="true"
                            android:text="Details" />

                        <!--CITY-->
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="testingemail@gmail.com"
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/colorBGPrimary" />
                        <!--CITY-->
                        <TextView
                            android:id="@+id/tvMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="+639091297712"
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/colorBGPrimary" />
                        <TextView
                            android:id="@+id/tvLineOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Sta. Mesa"
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/colorBGPrimary" />
                        <!--CITY-->
                        <TextView
                            android:id="@+id/tvCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Manila"
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/colorBGPrimary" />
                        <!--GENDER-->
                        <TextView
                            android:id="@+id/tvGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Male"
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/colorBGPrimary" />
                        <!--AGE-->
                        <TextView
                            android:id="@+id/tvAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="30 Years Old"
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />

                        <!--FEATURED REVIEWS-->
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="#546E7A"
                            android:clickable="true"
                            android:elevation="10dp"
                            android:padding="15dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorFontPrimary"
                            android:textAllCaps="true"
                            android:text="LATEST REVIEWS" />
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/rv_featuredrevs"
                            android:layout_gravity="center|top"
                            android:overScrollMode="never"
                            android:layout_marginTop="5dp"
                            tools:layout_editor_absoluteX="745dp"
                            tools:layout_editor_absoluteY="-51dp">
                        </android.support.v7.widget.RecyclerView>
                        <TextView
                            android:id="@+id/tvNoLatestReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="There are no latest reviews to be displayed."
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />
                        <Button
                            android:id="@+id/btnViewReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="VIEW ALL REVIEWS"
                            android:textColor="#eeeeee"
                            android:textSize="18sp"
                            android:background="@drawable/main_btn_bg"/>

                        <!--SKILLS-->
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="#546E7A"
                            android:clickable="true"
                            android:elevation="10dp"
                            android:padding="15dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorFontPrimary"
                            android:textAllCaps="true"
                            android:text="SKILLS" />
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/rv_skills"
                            android:layout_gravity="center|top"
                            android:overScrollMode="never"
                            android:layout_marginTop="5dp"
                            tools:layout_editor_absoluteX="745dp"
                            tools:layout_editor_absoluteY="-51dp">
                        </android.support.v7.widget.RecyclerView>

                        <!--BADGES-->
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="#546E7A"
                            android:clickable="true"
                            android:elevation="10dp"
                            android:padding="15dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorFontPrimary"
                            android:textAllCaps="true"
                            android:text="BADGES" />
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/rv_badges"
                            android:layout_gravity="center|top"
                            android:overScrollMode="never"
                            android:layout_marginTop="5dp"
                            tools:layout_editor_absoluteX="745dp"
                            tools:layout_editor_absoluteY="-51dp">
                        </android.support.v7.widget.RecyclerView>

                        <TextView
                            android:id="@+id/tvNoBadges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="There are no badges to be displayed."
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>
                </RelativeLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>



</FrameLayout>
