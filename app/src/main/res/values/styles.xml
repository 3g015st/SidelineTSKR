<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Text input layout style-->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Text input layout counter style-->
    <style name="TextAppearance.App.TextInputLayout.Counter" parent="@android:style/TextAppearance">
        <item name="android:textColor">#f44336</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--Text input layout counter exceeded style-->
    <style name="TextAppearance.App.TextInputLayout.Counter.Exceed" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--Bottom Nav Style-->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/avenir</item>
    </style>
</resources>
